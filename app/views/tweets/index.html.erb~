  <%= f.label :tweet %><br>
  <%= f.text_area :tweet %>
</div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>


<table>
  <thead>
    <tr>
      <th>Tweet</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
    <tr>
      <td><%= tweet.tweet %></td>
      <td><%= tweet.user.name %></td>
      <td><%= link_to 'Show', tweet %></td>
      <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
      <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

